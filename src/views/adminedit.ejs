<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head')  %>
        <%- include('./partials/cssadminedit')  %>
    </head>
<body>
    <%- include('./partials/header')  %>
    <main>
        <div class="articulos">
            <form action="updateprod/<%= producto.id%>" method="POST">
              <article class="articulo">
                <div class="articulo-inputs">
                    <label for="prodName">Nombre de producto</label>
                    <input type="text" name="name" id="name" value="<%= producto.name%>">
                </div>
                <div class="articulo-inputs">
                    <label for="prodName">Descripcion de producto</label>
                    <input type="text" name="desc" id="desc" value="<%= producto.desc%>">
                </div>
                <div class="articulo-inputs">
                    <label for="prodName">Precio de producto</label>
                    <input type="text" name="price" id="price" value="<%= producto.price%>">
                </div>
                <div class="articulo-inputs">                    
                    <label for="prodName">Color de producto</label>
                    <input type="text" name="color" id="color" value="<%= producto.color%>">
                </div>
                <div class="button-articulo">
                    <button type="submit">Editar</button>
                </div>
              </article>
            </form>
          </div>
    </main>
    <%- include('./partials/footer') %>
</body>
</html>