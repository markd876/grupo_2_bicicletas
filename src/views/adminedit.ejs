<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head')  %>
        <%- include('./partials/cssadminedit')  %>
    </head>
<body>
    <%- include('./partials/header')  %>
    <main>
        <div class="articulos">
            <form class="formulario" action="updateprod/<%= producto.id%>" method="POST">
              <article class="articulo">
                <div class="articulo-inputs">
                    <label for="prodName">Nombre de producto</label>
                    <input type="text" name="nombre" id="producto_nombre" value="<%= producto.nombre%>">
                </div>
                <div class="articulo-inputs">
                    <label for="prodName">Descripcion de producto</label>
                    <input type="text" name="descripcion" id="producto_descripcion" value="<%= producto.descripcion%>">
                </div>
                <div class="articulo-inputs">
                    <label for="prodName">Precio de producto</label>
                    <input type="text" name="precio" id="producto_precio" value="<%= producto.precio%>">
                </div>
                <div class="articulo-inputs">                    
                    <label for="prodName">Color de producto</label>
                    <input type="text" name="color" id="producto_color" value="<%= producto.color%>">
                </div>
                <div class = 'errores'>
                    <ul></ul>
                </div>
                <div class="button-articulo">
                    <button type="submit">Editar</button>
                </div>
              </article>
            </form>
          </div>
    </main>
    <%- include('./partials/footer') %>
     <script src="/js/editarprod-script.js"></script> 
</body>
</html>