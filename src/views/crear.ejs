<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head')  %>
        <%- include('./partials/csscrear')  %>
    </head>
<body>
    <%- include('./partials/header')  %>
    <main>
        <div class="crear-container">
            <div class="crear-producto">
                <p>Crea tu producto</p>
                <div class="producto-nombre">
                    <input type="text" name="producto-nombre" id="producto-nombre" placeholder="Nombre">
                </div>
                <div class="producto-descripcion">
                    <input type="text" name="producto-descripcion" id="producto-descripcion" placeholder="Descripcion">
                </div>
                <div class="producto-colores">
                    <input list="colores" id="producto-colores" name="producto-colores" placeholder="Color del producto" />
                        <datalist id="colores">
                            <option value="Rojo"></option>
                            <option value="Verde"></option>
                            <option value="Azul"></option>
                            <option value="Blanco"></option>
                            <option value="Negro"></option>
                        </datalist>
                </div>
                <div class="producto-precio">
                    <input type="text" name="producto-precio" id="producto-precio" placeholder="Precio">
                </div>
                <label for="producto-imagen">Subi una imagen de tu producto</label>
                <div class="producto-imagen">
                    <input type="file" name="producto-imagen" id="producto-imagen" placeholder="Imagen">
                </div>
                <div class="agregar-button">
                    <button>Agregar</button>
                </div>
            </div>
        </div>
    </main>
    <%- include('./partials/footer') %>
</body>
</html>